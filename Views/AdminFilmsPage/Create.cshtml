@model FilmFlicks.Domain.Entities.FilmEntity

<h2>Добавление нового фильма</h2>

<form asp-action="CreateFilm">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" maxlength="1024" required />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" type="number" step="0.1" min="0" max="10" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}