@model IEnumerable<FilmFlicks.Domain.Entities.FilmCinema>

<h1>Список связей фильмов и киноцентров</h1>

<a asp-action="Create" class="btn btn-primary">Добавить новую связь</a>

<table class="table">
    <thead>
    <tr>
        <th>Фильм</th>
        <th>Киноцентр</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            if (item.Film != null && item.Cinema != null)
            {
                <tr>
                    <td>@(item.Film == null ? "Неизвестный фильм" : item.Film.Name)</td>
                    <td>@(item.Cinema == null ? "Неизвестный киноцентр" : item.Cinema.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редактировать</a>
                    <td>
                        <form asp-action="DeleteFilmCinema" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                    </td>
                </tr>
            }
        }
    }
    else
    {
        <tr><td colspan="3">Нет данных для отображения.</td></tr>
    }
    </tbody>
</table>